@import url('http://fonts.googleapis.com/css?family=Open+Sans:400italic,700,400')
@import url('http://fonts.googleapis.com/css?family=Raleway:400,700')

color-one = #54b980
color-one-light = #b3eacb
color-one-dark = #1a8d4c

color-two = #5089a5
color-two-light = #b2d4e4
color-two-dark = #1c5d7d

color-three = #aee86a
color-three-light = #ddf8be
color-three-dark = #6fb321

centerpage()
  max-width 1000px
  margin 0 auto

body
  font-family 'Open Sans', Helvetica, Arial, sans-serif
  margin 0

h1
  font-family 'Raleway', Helvetica, Arial, sans-serif

.header
  centerpage()
  position relative
  height 100px
  background-color #fff

  .site-title
    margin 0
    padding 20px

  .menubar
    position absolute
    bottom 0
    padding 10px

    .menubar-link
      padding 10px
      text-decoration none

      &:nth-child(3n+1)
        color color-one-dark
      
        &:hover
          color color-one-light
      
      &:nth-child(3n+2)
        color color-two-dark
      
        &:hover
          color color-two-light
      
      &:nth-child(3n+3)
        color color-three-dark

        &:hover
          color color-three-light

.header-border
  height 10px
  background-image url("img/border.png")
  background-repeat repeat-x

.body
  centerpage()
  display flex
  flex-flow row wrap
  justify-content space-around
  align-content flex-start

  .body-block
    padding 10px 20px

  .body-circle
    margin 40px
    width 150px
    height @width
    border-radius 50%
    flex 0 0 auto

  .filler
    margin 0 40px
    width 150px
    flex 0 0 auto

  .body-block
  .body-circle
    &:nth-child(3n+1)
      background-color color-one

    &:nth-child(3n+2)
      background-color color-two

    &:nth-child(3n+3)
      background-color color-three
      
    &.short
      height 100px
      
      h3, p
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
